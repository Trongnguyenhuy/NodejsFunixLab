<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form 
            class="product-form" 
            action="/admin/<% if (editing) { %>edit-product<% } else { %>add-product<% } %>" 
            method="POST"
            enctype="multipart/form-data"
        >
            <div class="form-control">
                <label for="title">Title</label>
                <input 
                    type="text" 
                    name="title" 
                    id="title" 
                    value="<% if (editing || hasErrors) { %><%= product.title %><% } %>"
                    class="<%= validationErrors.find(e => e.param === 'title') ? 'invalid': '' %>"
                >
            </div>
            <!--<div class="form-control">
                <label for="imgUrl">Image URL</label>
                <input 
                    type="text" 
                    name="imgUrl" 
                    id="imgUrl" 
                    value="<% if (editing || hasErrors) { %><%= product.imgUrl %><% } %>"
                    class="<%= validationErrors.find(e => e.param === 'imgUrl')? 'invalid': '' %>"
                >
            </div> -->
            <div class="form-control">
                <label for="image">Image</label>
                <input 
                    type="file" 
                    name="image" 
                    id="image" 
                >
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input 
                    type="number" 
                    name="price" 
                    id="price" 
                    step="0.01" 
                    value="<% if (editing || hasErrors) { %><%= product.price %><% } %>"
                    class="<%= validationErrors.find(e => e.param === 'price')? 'invalid': '' %>"
                >
            </div>
            <div class="form-control">
                <label for="descriptions">Description</label>
                <textarea 
                    name="descriptions" 
                    id="descriptions" 
                    rows="5"
                    class="<%= validationErrors.find(e => e.param === 'descriptions')? 'invalid': '' %>"
                ><% if (editing || hasErrors) { %><%= product.descriptions %><% } %></textarea>
            </div>
            <% if (editing) { %>
                <input type="hidden" value="<%= product._id %>" name="productId">
            <% } %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"">
            <button class="btn" type="submit"><% if (editing) { %>Update Product<% } else { %>Add Product<% } %></button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>